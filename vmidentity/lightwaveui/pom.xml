  <artifactId>lightwaveui</artifactId>
  <packaging>war</packaging>
  <name>Lightwave Admin UI</name>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-war-plugin</artifactId>
        <version>${maven.war.plugin.version}</version>
        <configuration>
          <outputDirectory>${outputDirectory}</outputDirectory>
          <warName>${project.artifactId}</warName>
          <packagingExcludes>WEB-INF/classes/vmware-stsd,WEB-INF/classes/sso-firewall.json,
            WEB-INF/classes/project.properties,WEB-INF/classes/com/**, WEB-INF/classes/org/**,
            ${lib.excludes.pattern}</packagingExcludes>
          <archiveClasses>true</archiveClasses>
          <archive>
            <manifestEntries>
              <Specification-Title>${lightwaveui.title}</Specification-Title>
              <Specification-Version>${lightwaveui.version}</Specification-Version>
              <Specification-Vendor>${lightwaveui.vendor}</Specification-Vendor>
              <Implementation-Title>${lightwaveui.title}</Implementation-Title>
              <Implementation-Version>${lightwaveui.version}</Implementation-Version>
              <Implementation-Vendor>${lightwaveui.vendor}</Implementation-Vendor>
            </manifestEntries>
          </archive>
        </configuration>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>war</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <!-- Copy Resources Directory -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-resources-plugin</artifactId>
        <version>${maven.resources.plugin.version}</version>
        <executions>
          <execution>
            <id>copy-sso-common-resources</id>
            <phase>compile</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${basedir}/src/main/resources</outputDirectory>
              <overwrite>true</overwrite>
              <resources>
                <resource>
                  <directory>${basedir}/../sso-common/src/main/resources</directory>
                  <filtering>true</filtering>
                </resource>
              </resources>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

