<?xml version="1.0" encoding="UTF-8"?>
<Configuration monitorInterval="30" packages="com.vmware.identity.diagnostics">
    <Appenders>
        <RollingFile name="fileAppender" fileName="target/failsafe-reports/openidconnect.log" filePattern="${sys:catalina.base}/logs/openidconnect-%i.log.gz" append="true">
            <PatternLayout pattern="[%d{yyyy-MM-dd'T'HH:mm:ss.SSSXXX} %-20X{TenantNameMDCKey} %-36X{CorrelationIdMDCKey} %-5p] [%c{1}] %m %n"/>
             <ThresholdFilter level="INFO"/>
             <Policies>
                 <SizeBasedTriggeringPolicy size="50 MB" />
             </Policies>
             <DefaultRolloverStrategy max="5"/>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="fileAppender" />
        </Root>
   </Loggers>
</Configuration>