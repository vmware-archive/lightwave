<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.vmware.identity</groupId>
    <artifactId>openidconnect-client-lib</artifactId>
    <version>6.6.0</version>

    <properties>
        <java.version>1.7</java.version>
        <vmware.version>6.6.0</vmware.version>
        <junit.version>4.12</junit.version>
        <easymock.version>3.2</easymock.version>
        <bouncycastle.version>1.52</bouncycastle.version>
        <powermock.version>1.6.2</powermock.version>
        <outputDirectory>${basedir}/../../build/rpmbuild/BUILDROOT/opt/vmware/jars/</outputDirectory>
    </properties>

    <profiles>
        <profile>
            <id>dev</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <build.profile.id>dev</build.profile.id>
                <skip.integration.tests>true</skip.integration.tests>
                <skip.unit.tests>false</skip.unit.tests>
            </properties>
        </profile>

        <profile>
            <id>integration-test</id>
            <properties>
                <build.profile.id>integration-test</build.profile.id>
                <skip.integration.tests>false</skip.integration.tests>
                <skip.unit.tests>true</skip.unit.tests>
            </properties>
        </profile>
    </profiles>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.1</version>
                <configuration>
                    <source>${java.version}</source>
                    <target>${java.version}</target>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.18</version>
                <dependencies>
                    <dependency>
                        <groupId>org.apache.maven.surefire</groupId>
                        <artifactId>surefire-junit47</artifactId>
                        <version>2.12.4</version>
                    </dependency>
                </dependencies>
                <configuration>
                    <skipTests>${skip.unit.tests}</skipTests>
                    <excludes>
                        <exclude>**/*IT.java</exclude>
                    </excludes>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-failsafe-plugin</artifactId>
                <version>2.18</version>
                <dependencies>
                    <dependency>
                        <groupId>org.apache.maven.surefire</groupId>
                        <artifactId>surefire-junit47</artifactId>
                        <version>2.12.4</version>
                    </dependency>
                </dependencies>
                <executions>
                    <execution>
                        <id>integration-tests</id>
                        <goals>
                            <goal>integration-test</goal>
                            <goal>verify</goal>
                        </goals>
                        <configuration>
                            <skipTests>${skip.integration.tests}</skipTests>
                            <redirectTestOutputToFile>true</redirectTestOutputToFile>
                            <excludes>
                                <exclude>**/*GssIT.java</exclude>
                            </excludes>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-jar-plugin</artifactId>
                <version>2.6</version>
                <executions>
                    <execution>
                        <id>copy-jar-to-output</id>
                        <phase>package</phase>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${outputDirectory}</outputDirectory>
                            <finalName>${artifactId}</finalName>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>./oidc-lib</outputDirectory>
                            <includeScope>runtime</includeScope>
                            <excludeGroupIds>com.vmware.identity</excludeGroupIds>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <distributionManagement>
        <repository>
            <id>lightwave</id>
            <name>lightwave</name>
            <url>http://artifactory.ec.eng.vmware.com:8081/artifactory/lightwave</url>
        </repository>
    </distributionManagement>

    <dependencies>
        <!-- VMware Dependencies -->
        <dependency>
            <groupId>com.vmware.identity</groupId>
            <artifactId>openidconnect-common</artifactId>
            <version>${vmware.version}</version>
        </dependency>

        <dependency>
            <groupId>com.vmware.identity</groupId>
            <artifactId>openidconnect-protocol</artifactId>
            <version>${vmware.version}</version>
        </dependency>

        <dependency>
            <groupId>com.vmware.identity</groupId>
            <artifactId>vmware-endpoint-certificate-store</artifactId>
            <version>${vmware.version}</version>
        </dependency>

        <dependency>
            <groupId>com.vmware.identity</groupId>
            <artifactId>client-domain-controller-cache</artifactId>
            <version>${vmware.version}</version>
        </dependency>

        <!-- Test Dependencies -->
        <dependency>
            <groupId>com.vmware.identity.rest.core</groupId>
            <artifactId>vmware-identity-rest-core-client</artifactId>
            <version>${vmware.version}</version>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>com.vmware.identity.rest.afd</groupId>
            <artifactId>vmware-identity-rest-afd-client</artifactId>
            <version>${vmware.version}</version>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>com.vmware.identity.rest.idm</groupId>
            <artifactId>vmware-identity-rest-idm-client</artifactId>
            <version>${vmware.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.vmware.vmdir.rest</groupId>
            <artifactId>vmware-directory-rest-client</artifactId>
            <version>${vmware.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.vmware.vmdir.rest</groupId>
            <artifactId>vmware-directory-rest-common</artifactId>
            <version>${vmware.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.vmware.identity.rest.idm</groupId>
            <artifactId>vmware-identity-rest-idm-common</artifactId>
            <version>${vmware.version}</version>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>com.vmware.identity.rest.core</groupId>
            <artifactId>vmware-identity-rest-core-common</artifactId>
            <version>${vmware.version}</version>
            <scope>test</scope>
        </dependency>

        <!-- Test Dependencies -->
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>${junit.version}</version>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.easymock</groupId>
            <artifactId>easymock</artifactId>
            <version>${easymock.version}</version>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.bouncycastle</groupId>
            <artifactId>bcpkix-jdk15on</artifactId>
            <version>${bouncycastle.version}</version>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.powermock</groupId>
            <artifactId>powermock-easymock-release-full</artifactId>
            <version>${powermock.version}</version>
            <classifier>full</classifier>
            <scope>test</scope>
        </dependency>
    </dependencies>
</project>
