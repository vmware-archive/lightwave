<?xml version="1.0" encoding="UTF-8"?>

<!-- RESTful IDM application log4j configuration -->

<Configuration monitorInterval="30" packages="com.vmware">

    <Appenders>
        <RollingFile name="fileAppender"
            fileName="${sys:catalina.base}/logs/vmware-rest-directory.log"
            filePattern="vmware-directory-rest-test-%i.log" append="true">
            <PatternLayout pattern="[%-5p][%d{yyyy-MM-dd'T'HH:mm:ss.SSSXXX}][%X{id}] %c{1} - %m%n" />
            <ThresholdFilter level="DEBUG" />
            <Policies>
                <SizeBasedTriggeringPolicy size="50 MB" />
            </Policies>
            <DefaultRolloverStrategy max="10" />
        </RollingFile>

        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="[%-5p][%d{yyyy-MM-dd'T'HH:mm:ss.SSSXXX}][%X{id}] %c{1} - %m%n" />
        </Console>
    </Appenders>

    <Loggers>
        <Logger name="org.glassfish.jersey" level= "info">
            <AppenderRef ref="fileAppender">
            </AppenderRef>
        </Logger>
        <Logger name="org.apache" level="warn">
            <AppenderRef ref="fileAppender">
            </AppenderRef>
        </Logger>
        <Logger name="com.vmware.directory" level= "info" additivity="false">
            <AppenderRef ref="fileAppender">
            </AppenderRef>
        </Logger>
        <Root level= "info">
            <AppenderRef ref="fileAppender" />
        </Root>
    </Loggers>
</Configuration>
